datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String
  demandas  demanda[]
  avaliacoes avaliacao[]
}

model empresa {
  id         Int      @id @default(autoincrement())
  nome       String
  cnpj       String   @unique
  telefone   String
  email      String   @unique
  redeSocial String?
  senha      String
  createdAt  DateTime @default(now())
}

model demanda {
  id          Int      @id @default(autoincrement())
  cargo       String
  valor       Int      @default(0)
  descricao   String
  usuario     usuario? @relation(fields: [usuario_id], references: [id])
  usuario_id  Int?
}

model avaliacao {
  id        Int      @id @default(autoincrement())
  nota      Int
  comentario String
  usuario   usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}
